{
  "$schema": "../effect.addon.schema.json",

  "is-c3-addon": true,
  "type": "effect",
  "name": "Radial Shadow",
  "id": "Disketaa_Radial-Shadow",

  "supported-renderers": ["webgl", "webgpu"],

  "version": "0.2",
  "author": "Disketaa",
  "website": "https://github.com/Disketaa/Shaders/tree/main/Radial%20Shadow",
  "documentation": "https://www.construct.net/en/make-games/addons/1521/radial-shadow",
  "description": "Creates a radial shadow underneath the object.",
  "file-list": [
    "lang/en-US.json",
    "lang/ru-RU.json",
    "addon.json",
    "effect.fx",
    "effect.wgsl"
  ],

  "category": "other",
  "blends-background": false,
  "cross-sampling": false,
  "preserves-opaqueness": false,
  "animated": false,
  "extend-box": {
    "horizontal": 12,
    "vertical": 12
  },

  "parameters": [
    {
      "id": "shadow_color",
      "type": "color",
      "initial-value": [0.0, 0.0, 0.0],
      "uniform": "shadow_color"
    },
    {
      "id": "shadow_opacity",
      "type": "percent",
      "initial-value": 0.5,
      "uniform": "shadow_opacity"
    },
    {
      "id": "sharpness",
      "type": "percent",
      "initial-value": 0.0,
      "uniform": "sharpness"
    },
    {
      "id": "horizontal_center",
      "type": "percent",
      "initial-value": 0.5,
      "uniform": "horizontal_center"
    },
    {
      "id": "vertical_center",
      "type": "percent",
      "initial-value": 1.0,
      "uniform": "vertical_center"
    },
    {
      "id": "horizontal_scale",
      "type": "percent",
      "initial-value": 1.0,
      "uniform": "horizontal_scale"
    },
    {
      "id": "vertical_scale",
      "type": "percent",
      "initial-value": 0.25,
      "uniform": "vertical_scale"
    },
    {
      "id": "horizontal_offset",
      "type": "float",
      "initial-value": 0.0,
      "uniform": "horizontal_offset"
    },
    {
      "id": "vertical_offset",
      "type": "float",
      "initial-value": 0.0,
      "uniform": "vertical_offset"
    }
  ]
}