{
  "$schema": "../effect.addon.schema.json",

  "is-c3-addon": true,
  "type": "effect",
  "name": "Angular Rim Light",
  "id": "Disketaa_Angular-Rim-Light",

  "supported-renderers": ["webgl", "webgpu"],

  "version": "0.4",
  "author": "Disketaa",
  "website": "https://github.com/Disketaa/Shaders/tree/main/Angular%20Rim%20Light",
  "documentation": "https://www.construct.net/en/make-games/addons/1518/angular-rim-light/documentation",
  "description": "Creates a directional lighting that illuminates pixels within a cone.",
  "file-list": [
    "lang/en-US.json",
    "lang/ru-RU.json",
    "addon.json",
    "effect.fx",
    "effect.wgsl"
  ],

  "category": "color",
  "blends-background": false,
  "cross-sampling": false,
  "preserves-opaqueness": false,
  "animated": false,
  "extend-box": {
    "horizontal": 0,
    "vertical": 0
  },

  "parameters": [
    {
      "id": "rim_color",
      "type": "color",
      "initial-value": [1.0, 1.0, 1.0],
      "uniform": "rim_color",
      "interpolatable": true
    },
    {
      "id": "opacity",
      "type": "percent",
      "initial-value": 0.5,
      "uniform": "opacity"
    },
    {
      "id": "blending",
      "type": "percent",
      "initial-value": 1.0,
      "uniform": "blending"
    },
    {
      "id": "threshold",
      "type": "percent",
      "initial-value": 1.0,
      "uniform": "threshold"
    },
    {
      "id": "angle",
      "type": "float",
      "initial-value": 0.0,
      "uniform": "angle"
    },
    {
      "id": "cone",
      "type": "float",
      "initial-value": 90.0,
      "uniform": "cone"
    },
    {
      "id": "amount",
      "type": "float",
      "initial-value": 75.0,
      "uniform": "amount"
    },
    {
      "id": "sharpness",
      "type": "percent",
      "initial-value": 0.25,
      "uniform": "sharpness"
    }
  ]
}